<h1>Movies</h1>
<ul>
    {{each movies}}
    <li>
        <h2> {{this.title}} </h2>
        <img src="{{this.image}}" alt="cover for the movie {{this.title}}">
        <a class="btn btn-see" href="/movies/{{this._id}}">See more</a>
        <a class="btn btn-delete" href="/movies/delete/{{this._id}}">Delete this movie</a>
    </li>
    {{/each}}    
</ul>